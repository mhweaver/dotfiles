[core]
	preloadindex = true
	editor = vim
	autocrlf = input
[user]
	name = "mhweaver"
	email = "mhweaver@gmail.com"
[includeIf "gitdir:~/scripts/"]
	path = ~/.gitconfig-work
[includeIf "gitdir:~/code/"]
	path = ~/.gitconfig-work
[push]
	default = simple
[help]
	autocorrect = 1
[alias]
	last = cat-file commit HEAD
	commitv = commit -v
	dmerge = merge --no-ff
[color]
	branch = auto
	diff = auto
	interactive = auto
	pager = true
	status = auto
[log]
	date = local
[init]
	templatedir = ~/.git-templates
